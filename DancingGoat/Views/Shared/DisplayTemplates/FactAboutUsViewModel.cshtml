@using DancingGoat.Models
@using Kentico.Kontent.Management.Helpers.Models
@model DancingGoat.Models.FactAboutUsViewModel

<section class="row text-and-image">
    <h2 class="col-lg-12">
        @Model.Fact.Title
        <edit-link language="@Model.Fact.System.Language" inline="true" element-ids="@new ElementIdentifier[] {Model.ParentItemElementIdentifier, new ElementIdentifier(Model.Fact.System.Id, FactAboutUs.TitleCodename) }" />
    </h2>
    <div class="col-md-6@( Model.Odd ? " col-md-push-6" : "" )">
        <div class="text-and-image-text@(Model.Odd ? "-right" : "" )">
            @Html.DisplayFor(vm => vm.Fact.Description)
            <edit-link language="@Model.Fact.System.Language" inline="false" element-ids="@new ElementIdentifier[] {Model.ParentItemElementIdentifier, new ElementIdentifier(Model.Fact.System.Id, FactAboutUs.DescriptionCodename) }" />
        </div>
    </div>
    <div class="col-md-6@( Model.Odd ? " col-md-pull-6" : "" )">
        <img-asset asset="@Model.Fact.Image.First()" class="img-responsive" default-width="300">
            <media-condition min-width="1120" image-width="540" />
            <media-condition min-width="768" max-width="1120" image-width="370" />
            <media-condition min-width="330" max-width="768" image-width="468" />
        </img-asset>
        <edit-link language="@Model.Fact.System.Language" inline="false" element-ids="@new ElementIdentifier[] {Model.ParentItemElementIdentifier, new ElementIdentifier(Model.Fact.System.Id, FactAboutUs.ImageCodename) }" />
    </div>
</section>