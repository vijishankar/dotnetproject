@model IEnumerable<DancingGoat.Models.IProduct>

@if (Model.Any())
{
    foreach (var product in Model)
    {
        <!-- 3 products on row for large screen -->
        <div class="col-md-6 col-lg-4">
            @Html.DisplayFor(m => product, "Product")
        </div>
    }
}
else
{
    <span class="ContentLabel">@Localizer["Brewers.NoMatchingProducts"]</span>
}
