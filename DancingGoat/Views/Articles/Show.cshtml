@using DancingGoat.Helpers.Extensions
@model DancingGoat.Models.Article
@{
    ViewBag.Title = @Model.MetadataMetaTitle;
}
<section title="headers" , id="head">
    @await Html.PartialAsync("HeadersMetadata", Model)
</section>

<article class="article-detail col-lg-9 col-md-12 article-detail-related-box">
    <h2>@Html.DisplayFor(vm => vm.Title)</h2>
    <div class="article-detail-datetime">
        @Html.DateTimeFormattedFor(vm => vm.PostDate, "D")
    </div>
    <div class="row">
        <div class="article-detail-image col-md-push-2 col-md-8">
            <img-asset asset="@Model.TeaserImage.First()" class="img-responsive" default-width="300" title="Article @Model.System.Name" />
        </div>
    </div>
    <div class="row">
        <div class="article-detail-content">
            @Html.DisplayFor(vm => vm.BodyCopy)
        </div>
    </div>
</article>
@if (Model.RelatedArticles.Any())
{
    <div class="article-related-articles">
        <h1 class="title-tab">@Localizer["Articles.RelatedArticles"]</h1>
        <div class="row">
            @foreach (var relatedArticle in Model.RelatedArticles)
            {
                @Html.DisplayFor(vm => relatedArticle, "RelatedArticle")
            }
        </div>
    </div>
}